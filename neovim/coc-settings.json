{
	"codeLens.enable": true,
    "clangd.checkUpdates": true,
	"rust-analyzer.updates.checkOnStartup": false,
	"rust-analyzer.cargo.runBuildScripts": true,
	"rust-analyzer.procMacro.enable": true,
	"rust-analyzer.server.path": "D:\\Programs\\_SDK\\ra\\rust-analyzer.exe",
    "rust-analyzer.inlayHints.refreshOnInsertMode": true,
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.checkOnSave.command": "fmt",
    "rust-analyzer.inlayHints.enable": true,
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.cache.warmup": false,
	"explorer.icon.enableNerdfont": true,
	"explorer.file.showHiddenFiles": true,
	"explorer.width": 30,
	"explorer.keyMappings.global": {
        "s": "toggleSelection",
        "<tab>": "actionMenu",

        "h": "indentPrev",
        "l": "indentNext",
        "o": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
        "<cr>": "open",
        "t": "open:tab",
        "<bs>": "gotoParent",

        "Y": "copyFilepath",
        "y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",

        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",

        ".": "toggleHidden",
        "R": "refresh",
        "<C-p>": "preview",

        "?": "help",
        "<esc>": "esc",
        "e": "systemExecute"
    }
}
